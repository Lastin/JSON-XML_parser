<?xml version="1.0" encoding="utf-8">
<$schema>http://json-schema.org/draft-04/schema#</$schema>
<title>Product set</title>
<type>array</type>
<items>	
	<title>Product</title>
	<type>object</type>
	<properties>		
		<id>			
			<description>The unique identifier for a product</description>
			<type>number</type>
		</id>
		<name>			
			<type>string</type>
		</name>
		<price>			
			<type>number</type>
			<minimum>0.0</minimum>
			<exclusiveMinimum>true</exclusiveMinimum>
		</price>
		<tags>			
			<type>array</type>
			<items>				
				<type>string</type>
			</items>
			<minItems>1.0</minItems>
			<uniqueItems>true</uniqueItems>
		</tags>
		<dimensions>			
			<type>object</type>
			<properties>				
				<length>					
					<type>&ampnumber</type>
				</length>
				<width>					
					<type>number</type>
				</width>
				<height>					
					<type>number</type>
				</height>
			</properties>
			<required>
				<array>
					<item>length</item>
					<item>width</item>
					<item>height</item>
				</array>
			</required>
		</dimensions>
		<warehouseLocation>			
			<description>Coordinates of the warehouse with the product</description>
			<$ref>http://json-schema.org/geo</$ref>
		</warehouseLocation>
	</properties>
	<required>
		<array>
			<item>id</item>
			<item>name</item>
			<item>price</item>
		</array>
	</required>
</items>
